<%= form_for :producto, :url => {:controller => "productos", :action => "buscar_get"}, :method => :get, :html => { :class => "form-horizontal" , :id => "form_producto"}  do |f| %>
  <div class="form-group">
    <div class="col-sm-8">
      <input type="text" class="form-control" placeholder="Buscar por nombre del producto" name="txt_nombre_producto">
    </div>
    <div class="col-sm-2">
      <input type="submit" value="Buscar"/>
    </div>
  </div>
   <% end %>
  <table class="table table-striped table-bordered table-hover dataTables-example" id="tablaUsuarios">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        <% if @productos != nil && @productos != ""
         
            @productos.each do |p| %>
        <tr class="gradeU">
            <td><%=p.id %></td>
            <td><%=p.nombre %></td>
            <td><%=p.precio %></td>
        </tr>
        <% end end %>
    </tbody>
</table>
